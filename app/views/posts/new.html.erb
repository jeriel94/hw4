<div class="container">
<h1>New Post</h1>
<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "Title", :class => "form-label"  %>
    <%= form.text_field "title", :class => "form-control" %>
  </p>
  <p>
    <%= form.label "Description", :class => "form-label"  %>
    <%= form.text_field "description", :class => "form-control" %>
  </p>
    <p>
    <%= form.label "Upload Image", :class => "form-label"  %>
    <%= form.file_field "uploaded_image", :accept => "image/jpeg,image/jpg,image/png,image/gif" %>
  </p>
   <p>
    <%= form.label "Posted_on", :class => "form-label"  %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <%= form.submit "Post", :class => "btn btn-primary"%>
  </p>
  <%= form.hidden_field "place_id" %>
  <%= form.hidden_field "user_id" %>
<% end %>
<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>
</div>

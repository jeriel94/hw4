<div class="container">
<div class="p-3">
<h2><%= @place["name"]%>  </h2>
</div>
<div class="row">
<% if @current_user %>
  <% for post in @posts %>
    <div class="col-md-4 col-sm-6">
    <% if post["user_id"] = @current_user %>
      <h4><%= post["title"] %></h4>
      <h5><%= post["posted_on"] %></h5>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
      <p><%= post["description"] %></p>
    </div>
    <% end %>
  <% end %>

  <p>
    <a class ="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>

  <p>
<% else %>
  You must first <a href="/login">login</a> to view posts.
<% end %>
  
<a class ="btn btn-warning" href="/places">Back to All Places</a>
</p>
</div>
</div>